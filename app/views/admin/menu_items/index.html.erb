<!-- app/views/admin/menu_items/index.html.erb -->
<%= render layout: "layouts/admin_page" do %>
  <div class="row border-bottom border-dark mb-2">
    <div class="col-2">
      <%= sortable_column('Menu Type', 'menu_type', "menu_items") %>
    </div>
    <div class="col-2">
      <%= sortable_column('Label', 'label', "menu_items") %>
    </div>
    <div class="col-1">
      <%= sortable_column('Menu Order', 'menu_order', "menu_items") %>
    </div>
    <div class="col-2">
      <%= sortable_column('Access', 'access', "menu_items") %>
    </div>
    <div class="col-3">
      <%= sortable_column('Link', 'link', "menu_items") %>
    </div>
    <div class="col-2">
      <%= link_to "Clear Sort", '#', class: "action-links", onclick: "clearSort()" %>
    </div>
  </div>
  <div class="scrollable-container p-2">
    <% controller.get_items.each do |menu_item| %>
      <div class="row">
        <div class="col-2">
          <%= menu_item.menu_type %>
        </div>
        <div class="col-2">
          <%= menu_item.label %>
        </div>
        <div class="col-1">
          <%= menu_item.menu_order %>
        </div>
        <div class="col-2">
          <%= menu_item.access %>
        </div>
        <div class="col-3">
          <%= menu_item.link %>
        </div>
        <div class="col-2" style="min-height: 2em;">
          <% delete_path = admin_menu_item_path(menu_item).to_s + "/delete" %>
          <%= action_links(menu_item,
                           admin_menu_item_path(menu_item),
                           edit_admin_menu_item_path(menu_item),
                           delete_path) %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-3">
      <%= link_to("New Menu Item", new_admin_menu_item_path, class: "btn btn-primary", target: "_self") %>
    </div>
    <div class="col-3"></div>
    <div class="col-6 justify-content-end">
      <%= render 'shared/page_navigation' %>
    </div>
  </div>
<% end %>
