<!-- app/views/admin/pages/index.html.erb -->
<% content_for :title, "#{@site_information.site_name} - Amin Dashboard - Pages" %>
<%= render layout: "layouts/header" do %>
<% end %>

<%= render layout: "layouts/admin_menu" do %>
  <%= render 'shared/flash_error' %>
  <div class="row mb-3">
    <div class="col-2">
      Label:
    </div>
    <div class="col-10">
      <%= @menu_item.label %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Icon:
    </div>
    <div class="col-10">
      <%= @menu_item.icon %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Options:
    </div>
    <div class="col-10">
      <%= @menu_item.options %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Link:
    </div>
    <div class="col-10">
      <%= @menu_item.link %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Access:
    </div>
    <div class="col-10">
      <%= @menu_item.access %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Menu Order:
    </div>
    <div class="col-10">
      <%= @menu_item.menu_order %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      Parent:
    </div>
    <div class="col-10">
      <%= @menu_item.parent_id %>
    </div>
  </div>
<% end %>

<%= render layout: "layouts/footer" do %>
<% end %>
