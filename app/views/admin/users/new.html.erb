<!-- app/views/admin/pages/new.html.erb -->
<% content_for :title, "#{@site_information.site_name} - Amin Dashboard - New Page" %>
<%= render layout: "layouts/header" do %>
<% end %>

<%= render layout: "layouts/admin_menu" do %>
  <%= render 'shared/flash_error' %>
  <%= form_with(model: @user, url: admin_users_path, method: :post, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :email, "Email*", class: "form-label" %>
      <%= form.text_field :email, class: "form-control", required: true, placeholder: "Enter the email for the user." %>
    </div>

    <div class="mb-3">
      <%= form.label :name, "Name*", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true, placeholder: "Enter the name of the user." %>
    </div>

    <div class="mb-3">
      <%= form.label :password, "Password*", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true, placeholder: "Enter the password for the user." %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :admin, { class: "form-check-input" }, true, false %>
      <%= form.label :admin, "Admin", class: "form-check-label" %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :super, { class: "form-check-input" }, true, false %>
      <%= form.label :super, "Super", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= form.label :roles, "Roles", class: "form-label" %>
      <%= form.text_field :roles, class: "form-control", placeholder: "Enter the roles for the user." %>
    </div>

    <div class="pb-3">
      * - Required Fields
    </div>
    <div class="mb-3">
      <%= form.submit "Save User", class: "btn btn-primary me-3" %>
      <%= link_to("Cancel", admin_pages_url, class: "btn btn-primary") %>
    </div>
  <% end %>
<% end %>

<%= render layout: "layouts/footer" do %>
<% end %>
