<!-- app/views/admin/pages/show.html.erb -->
<%= render layout: "layouts/admin_page" do %>
  <% if controller.get_item&.present? %>
    <div class="row mb-3">
      <div class="col-1">
        Name:
      </div>
      <div class="col-11">
        <%= controller.get_item.name %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Section:
      </div>
      <div class="col-11">
        <%= controller.get_item.section %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Title:
      </div>
      <div class="col-11">
        <%= controller.get_item.title %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Access:
      </div>
      <div class="col-11">
        <%= controller.get_item.access %>
      </div>
    </div>
  <% end %>
<% end %>
