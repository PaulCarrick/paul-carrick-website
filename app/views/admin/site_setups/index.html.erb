<!-- app/views/admin/site_setups/index.html.erb -->
<%= render layout: "layouts/admin_page" do %>
  <div class="row border-bottom border-dark mb-2">
    <div class="col-2" style="font-size: 10pt">
      <%= sortable_column('Configuration Name', 'configuration_name', "site_setups") %>
    </div>
    <div class="col-2" style="font-size: 10pt">
      <%= sortable_column('Site Name', 'site_name', "site_setups") %>
    </div>
    <div class="col-1" style="font-size: 10pt">
      <%= sortable_column('Owner', 'owner_name', "site_setups") %>
    </div>
    <div class="col-2" style="font-size: 10pt">
      <%= sortable_column('Domain', 'site_domain', "site_setups") %>
    </div>
    <div class="col-1" style="font-size: 10pt">
      <%= sortable_column('Host', 'site_host', "site_setups") %>
    </div>
    <div class="col-2" style="font-size: 10pt">
      <%= sortable_column('URL', 'site_url', "site_setups") %>
    </div>
    <div class="col-2" style="font-size: 10pt">
      <%= link_to "Clear Sort", '#', class: "action-links", onclick: "clearSort()" %>
    </div>
  </div>
  <div class="scrollable-container p-2">
    <% controller.get_items.each do |site_setup| %>
      <div class="row" style="font-size: 10pt">
        <div class="col-2">
          <%= site_setup.configuration_name %>
        </div>
        <div class="col-2" style="font-size: 10pt">
          <%= site_setup.site_name %>
        </div>
        <div class="col-1" style="font-size: 10pt">
          <%= site_setup.owner_name %>
        </div>
        <div class="col-2" style="font-size: 10pt">
          <%= site_setup.site_domain %>
        </div>
        <div class="col-1" style="font-size: 10pt">
          <%= site_setup.site_host %>
        </div>
        <div class="col-2" style="font-size: 10pt">
          <%= site_setup.site_url %>
        </div>
        <div class="col-2" style="min-height: 2em;">
          <% delete_path = admin_site_setup_path(site_setup).to_s + "/delete" %>
          <%= action_links(site_setup,
                           admin_site_setup_path(site_setup),
                           edit_admin_site_setup_path(site_setup),
                           delete_path) %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-3">
      <%= link_to("New #{controller.model_title}", new_admin_site_setup_path, class: "btn btn-primary", target: "_self") %>
    </div>
    <div class="col-3"></div>
    <div class="col-6 justify-content-end">
      <%= render 'shared/page_navigation' %>
    </div>
  </div>
<% end %>
