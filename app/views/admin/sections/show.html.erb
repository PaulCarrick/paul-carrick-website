<!-- app/views/admin/pages/show.html.erb -->
<%= render layout: "layouts/admin_page" do %>
  <% if controller.get_item&.present? %>
    <div class="row mb-3">
      <div class="col-1">
        Content Type:
      </div>
      <div class="col-11">
        <%= controller.get_item.content_type %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Section Name:
      </div>
      <div class="col-11">
        <%= controller.get_item.section_name %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Section Order:
      </div>
      <div class="col-11">
        <%= controller.get_item.section_order %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Image:
      </div>
      <div class="col-11">
        <%= controller.get_item.image %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Link:
      </div>
      <div class="col-11">
        <%= controller.get_item.link %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Formatting:
      </div>
      <div class="col-11">
        <%= controller.get_item.formatting %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-1">
        Description:
      </div>
      <div class="col-11">
        <%= raw(controller.get_item.description) %>
      </div>
    </div>
  <% end %>
<% end %>
